pipeline {
  agent any
  stages {
    stage('vault password creds') {
     environment {
        vault_pass = credentials('my_jenkins_vault3')
      }
      steps {
        sh "echo 'My secret file: ${vault_pass}'"
      }
    }
    stage('build Device configuration') {
      steps {
        sh 'ansible-playbook --vault-password-file vault_pass pb_arista_fabric_deploy_01.yml --tags mgmt'
       }
      }
    } 
}